<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.leonovich.notizieportale.domain" auto-import="false" catalog="mysitetonight">
    <class name="PersonDetail" table="T_PERSON_DETAIL" lazy="false">
        <id name="personId" column="F_PERSON_ID">
            <generator class="foreign">
                <param name="property">person</param>
            </generator>
        </id>
        <one-to-one name="person" class="Person" constrained="true"/>
        <property name="email" column="F_EMAIL"/>
        <property name="password" column="F_PASSWORD"/>
        <property name="birthday" column="F_BIRTHDAY"/>
        <property name="role" column="F_ROLE"/>
    </class>
    </hibernate-mapping>