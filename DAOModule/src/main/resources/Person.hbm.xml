<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="by.leonovich.notizieportale.domain" auto-import="false" catalog="mysitetonight">
    <class name="Person" table="T_PERSON" lazy="false">
        <id name="personId" type="java.lang.Long" column="F_PERSON_ID">
            <generator class="increment"/>
        </id>
        <property name="name" column="F_NAME" type="string"/>
        <property name="surname" column="F_SURNAME" type="string"/>

        <one-to-one name="personDetail" class="PersonDetail" cascade="all"/>

        <set name="newses" table="T_NEWS" inverse="true" lazy="true" fetch="select">
            <key column="F_PERSON_ID" not-null="true"/>
            <one-to-many class="News"/>
        </set>

        <set name="commentaries" table="T_COMMENTARY" inverse="true" lazy="true" fetch="select">
            <key column="F_PERSON_ID" not-null="true"/>
            <one-to-many class="Commentary"/>
        </set>
    </class>
</hibernate-mapping>